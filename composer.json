{
  "name": "karthick-murugan/coding-standards-check",
  "description": "Sample project to check PHP_CodeSniffer in CI/CD",
  "require-dev": {
    "automattic/vipwpcs": "^2.3.4",
    "wp-coding-standards/wpcs": "^2.3",
    "squizlabs/php_codesniffer": "^3.7",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
  },
  "scripts": {
    "phpcs": "phpcs --standard=WordPress-Extra --ignore=vendor/* .",
    "phpcbf": "phpcbf --standard=WordPress-Extra --ignore=vendor/* .",
    "phpcs_i": "vendor/bin/phpcs -i",
    "set_default": "phpcs --config-set default_standard WordPress-Extra",
    "post-install-cmd": [
      "vendor/bin/phpcs --config-set installed_paths vendor/automattic/vipwpcs,vendor/wp-coding-standards/wpcs,vendor/sirbrillig/phpcs-variable-analysis"
    ]
  },
  "extra": {
    "phpcodesniffer-standard": [
      "vendor/automattic/vipwpcs",
      "vendor/wp-coding-standards/wpcs",
      "vendor/sirbrillig/phpcs-variable-analysis"
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}